@using StudioTemplate.ViewModels;
@model CreateTeamVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Photo" ></label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Position">Position</label>
                    <input asp-for="Position" class="form-control" placeholder="Position">
                    <span asp-validation-for="Position"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TwitterLink">Twitter</label>
                    <input asp-for="TwitterLink" class="form-control" placeholder="Twitter">
                    <span asp-validation-for="TwitterLink"></span>

                </div>
                <div class="form-group">
                    <label asp-for="FacebookLink">Facebook</label>
                    <input asp-for="FacebookLink" class="form-control" placeholder="Facebook">
                    <span asp-validation-for="FacebookLink"></span>

                </div>
                <div class="form-group">
                    <label asp-for="LinkedinLink">Linkedin</label>
                    <input asp-for="LinkedinLink" class="form-control" placeholder="Linkedin">
                    <span asp-validation-for="LinkedinLink"></span>

                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
